# ======================================
# 完整的环境配置文件
# 复制此文件为 .env 并修改为您的实际配置
# ======================================

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=123456  # 修改为您的MySQL密码
DB_NAME=ad_platform

# Redis配置（可选，不影响基本功能）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=  # 如果Redis有密码请填写
REDIS_DB=0

# JWT配置（重要！生产环境必须修改）
JWT_SECRET=ad_platform_jwt_secret_key_2024_this_should_be_changed_in_production_environment_use_a_very_long_random_string
JWT_EXPIRE_HOURS=24

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENV=development  # development/production

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 文件上传配置
UPLOAD_PATH=uploads/
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# CORS配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# API限流配置
RATE_LIMIT=100
RATE_LIMIT_WINDOW=60  # seconds

# 管理员默认账号（首次运行时自动创建）
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_EMAIL=admin@example.com

# 系统配置
SYSTEM_NAME=广告推广系统
SYSTEM_VERSION=1.0.0
SYSTEM_TIMEZONE=Asia/Shanghai

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 安全配置
BCRYPT_COST=10  # 密码加密强度(10-14)
SESSION_TIMEOUT=1440  # 会话超时时间（分钟）
MAX_LOGIN_ATTEMPTS=5  # 最大登录尝试次数
LOGIN_LOCK_DURATION=15  # 登录锁定时长（分钟）

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@adplatform.com
SMTP_SSL=false

# 支付配置（可选）
PAYMENT_GATEWAY=alipay  # alipay/wechat/stripe
PAYMENT_APP_ID=
PAYMENT_APP_SECRET=
PAYMENT_CALLBACK_URL=http://localhost:8080/api/payment/callback

# OSS存储配置（可选）
OSS_PROVIDER=local  # local/aliyun/qiniu/aws
OSS_ENDPOINT=
OSS_ACCESS_KEY=
OSS_SECRET_KEY=
OSS_BUCKET_NAME=
OSS_REGION=

# 监控配置（可选）
ENABLE_METRICS=false
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces